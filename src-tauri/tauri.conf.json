{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Claude RTS",
  "version": "0.1.0",
  "identifier": "com.clauderts.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Claude RTS",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Visualize Claude Code sessions in real-time",
    "longDescription": "A real-time strategy game-style visualization of Claude Code agent activity. Watch as Claude explores your codebase, monitor token usage, and set cost alerts."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
